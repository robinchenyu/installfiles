test -s ~/.alias && . ~/.alias || true
source /usr/bin/virtualenvwrapper.sh
export GTK_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
export QT_IM_MODULE=ibus

# go 
export GOROOT=$HOME/go
export GOPATH=$HOME/goprojects
export PATH=$HOME/bin:$PATH:$GOROOT/bin:$GOPATH/bin

# ruby and rails
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

alias tmuxa="tmux attach-session"
export TERM=xterm-256color


# download jdk wget --no-check-certificate --no-cookies --header "Cookie: oraclelicense=accept-securebackup-cookie" http://download.oracle.com/otn-pub/java/jdk/7u71-b14/jdk-7u71-linux-x64.rpm
export JAVA_HOME=/home/robin/jdk/jdk1.7.0_67
export CLASSPATH=$JAVA_HOME/lib
export PATH=$PATH:$JAVA_HOME/bin
